<%= link_to "Back", @video_path %>
<p><b>Write a Description</b></p>
<p><%= @video.title %></p>
<p><%=raw @video.embed_code %></p>
<p><%= @video.comment %></p>
<%= form_for [@video, @description] do |f| %>
  <div class="field">
    <%= f.label "Description" %><br>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>