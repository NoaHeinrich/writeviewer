<h1>New Video</h1>
<%= form_for(@video) do |f| %>
  <div class="field">
    <%= f.label "Video URL" %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label "(Optional) Instructions" %><br>
    <%= f.text_field :comment %>
  </div>
  <div>
    <%= f.submit "Submit"  %>
  </div>
<% end %>