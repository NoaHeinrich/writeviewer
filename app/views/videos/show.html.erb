<strong><%= @video.title %></strong>
<p>Uploaded by <%=@video.uploader.username%>, <%=@video.created_at.strftime("%F")%></p>
<p><%=raw @video.embed_code %></p>
<p><%= @video.comment %></p>
<% unless @video.description %>
  <div>
    <% if logged_in? %>
      <%= link_to "Write a description", new_video_description_path(@video) %>
    <% else %>
      <%= link_to "Want to describe it? Log In here.", login_path %>
    <% end %>
  </div>
<% else %>
  <div>
    <%= @video.description.content %>
  </div>
  <% if @video.uploader == current_user && @video.description.rating == nil %>
    <p>Was this description helpful?</p>
    <%= form_for [@video, @video.description] do |f| %>
      <%= radio_button_tag(:rating, 1) %>
      <%= label_tag(:rating, "1") %>
      <%= radio_button_tag(:rating, 2) %>
      <%= label_tag(:rating, "2") %>
      <%= radio_button_tag(:rating, 3) %>
      <%= label_tag(:rating, "3") %>
      <%= radio_button_tag(:rating, 4) %>
      <%= label_tag(:rating, "4") %>
      <%= radio_button_tag(:rating, 5) %>
      <%= label_tag(:rating, "5") %><br>
      <%= f.submit "Submit" %>
    <% end %>
  <% end %>
<% end %>